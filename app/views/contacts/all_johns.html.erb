<table class = "table table-hover">
  <th>Name</th>
  <th>Email</th>
  <th>Phone Number</th>
  <th>Contact Updated</th>
  <% @contacts.each do |contact| %>
    <tr>
    <% if contact.only_johns %>
      <td><%= contact.full_name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.phone_number %></td>
      <td><%= contact.updated_friendly_time %></td>
      </tr>
    <% end %>
  <% end %>
</table>
